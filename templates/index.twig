<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>SparkBlog</title>
        <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700|Noto+Sans:700,400' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="css/normalize.css">
        <link rel="stylesheet" href="css/site.css">
    </head>
    <body>
        <header>
            <div class="container">
                <div class="site-header">
                    <a class="logo" href="{{ path_for('/') }}">SparkBlog</a>
                    <a class="new-entry button button-round" href="{{ path_for('new') }}"><i class="material-icons">create</i></a>
                </div>
            </div>
        </header>
        <section>
            <div class="container">
                <div class="entry-list">
                    {% for post in posts %}
                        <article>
                            <h2><a href={{ post.slug }}>{{ post.title|e }}</a></h2>
                            <time datetime=post.date>{{ post.date|e }} {{'EST'}}</time>
                            <br>
                            {% for tag in tags %}
                                    {% for tagInner in tag %}
                                        {% if tagInner.id == post.id %}
                                            <span><a style='text-decoration:none;color:#678f89;' href="{{ path_for('filtered', {'tag': tagInner.tagName}) }}">{{'#'}}{{ tagInner.tagName }}</span>
                                        {% endif %}
                                    {% endfor %}
                            {% endfor %}
                        </article>
                    {% endfor %}
                </div>
            </div>
        </section>
        <footer>
            <div>
                <a href="#">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                <a href="#">Terms</a>
            </div>
        </footer>
    </body>
</html>