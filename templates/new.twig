<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>SparkBlog</title>
        <link href='https://fonts.googleapis.com/css?family=Noto+Serif:400,400italic,700|Noto+Sans:700,400' rel='stylesheet' type='text/css'>
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link rel="stylesheet" href="css/normalize.css">
        <link rel="stylesheet" href="css/site.css?version=51">
    </head>
    <body>
        <header>
            <div class="container">
                <div class="site-header">
                    <a class="logo" href="{{ path_for('/') }}">SparkBlog</a>
                    <a class="new-entry button button-round" href="edit.html"><i class="material-icons">create</i></a>
                </div>
            </div>
        </header>
        <section>
            <div class="container">
                <div class="new-entry">
                    <h2>Publish New Entry</h2>
                    <p class="error">{{  error.title }}</p>
                    <p class="error">{{  error.body  }}</p>
                    <form method="post" action="{{ path_for('new') }}">
                        <input type="hidden" name="csrf_name" value="{{ name }}">
                        <input type="hidden" name="csrf_value" value="{{ value }}">
                        <label for="title"> Title (Required)</label>
                        {% if input %}
                            <input type="text" name="title" value="{{ input.title }}"><br>
                        {% else %}
                            <input type="text" name="title"><br>
                        {% endif %}
                        <label for="name"> Tag</label>
                        <input type="text" name="tag"><br>
                        <label for="entry">Entry (Required)</label>
                        {% if input %}
                            <textarea rows="5" name="entry">{{ input.body }}</textarea>
                        {% else %}
                            <textarea rows="5" name="entry"></textarea>
                        {% endif %}
                        <input type="submit" value="Publish Entry" class="button">
                        <a href="{{ path_for('/') }}" class="button button-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </section>
        <footer>
            <div>
                <a href="{{ path_for('/') }}">Contact Us</a>&nbsp;&nbsp;&bull;&nbsp;&nbsp;
                <a href="{{ path_for('/') }}">Terms</a>
            </div>
        </footer>
    </body>
</html>